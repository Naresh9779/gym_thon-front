"use client";
import { useState } from 'react';
import { useWorkoutPlans } from '@/hooks/useWorkoutPlan';
import { Card, CardBody, CardHeader } from '@/components/ui/Card';
import { Button } from '@/components/ui/Button';
import ExerciseCard from '@/components/user/ExerciseCard';

export default function WorkoutPlanPage() {
  const { plans, loading, error, refresh, generateCycle, removePlan } = useWorkoutPlans();
  const [startDate, setStartDate] = useState<string>(new Date().toISOString().slice(0,10));
  const [weeks, setWeeks] = useState<number>(4);

  const latest = plans[0];
  const days: any[] = latest?.days || [];
  const [selectedIndex, setSelectedIndex] = useState<number>(0);

  return (
    <div className="space-y-6">
      {/* Header */}
      <div className="flex items-center justify-between">
        <div>
          <h1 className="text-3xl font-bold text-gray-900">Workout Plans</h1>
          <p className="text-gray-600 mt-1">AI-generated training programs for your goals</p>
        </div>
      </div>

      {/* Generate Controls */}
      <Card className="p-6">
        <h3 className="font-semibold text-lg mb-4">Generate New Cycle</h3>
        <div className="flex flex-wrap items-end gap-3">
          <div className="flex-1 min-w-[200px]">
            <label className="block text-sm font-medium text-gray-700 mb-2">Start Date</label>
            <input 
              type="date" 
              value={startDate} 
              onChange={(e)=>setStartDate(e.target.value)} 
              className="w-full border-2 border-gray-200 rounded-lg px-4 py-2 focus:outline-none focus:border-green-500" 
            />
          </div>
          <div className="w-32">
            <label className="block text-sm font-medium text-gray-700 mb-2">Duration</label>
            <input 
              type="number" 
              min={1} 
              max={12} 
              value={weeks} 
              onChange={(e)=>setWeeks(parseInt(e.target.value||'4',10))} 
              className="w-full border-2 border-gray-200 rounded-lg px-4 py-2 focus:outline-none focus:border-green-500" 
            />
          </div>
          <span className="text-sm text-gray-600 pb-2">weeks</span>
          <Button className="bg-green-500 hover:bg-green-600 text-white px-6" onClick={()=>generateCycle(startDate, weeks)}>
            Generate Cycle
          </Button>
          <Button variant="secondary" onClick={()=>refresh()}>
            <svg className="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
            </svg>
            Refresh
          </Button>
        </div>
      </Card>

      {loading && (
        <div className="flex items-center justify-center py-12">
          <div className="text-gray-500 flex items-center gap-2">
            <svg className="animate-spin h-5 w-5" viewBox="0 0 24 24">
              <circle className="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" strokeWidth="4" fill="none" />
              <path className="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z" />
            </svg>
            Loading plans...
          </div>
        </div>
      )}
      
      {error && (
        <div className="p-4 bg-red-50 border-2 border-red-200 rounded-lg text-red-700 flex items-start gap-3">
          <svg className="w-5 h-5 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
            <path fillRule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clipRule="evenodd" />
          </svg>
          {error}
        </div>
      )}

      {!loading && plans.length > 0 && (
        <>
          <h2 className="text-xl font-bold text-gray-900">Your Workout Cycles</h2>
          <div className="grid md:grid-cols-2 lg:grid-cols-3 gap-4">
            {plans.map((plan:any)=> (
              <Card key={plan._id} className="p-5 hover:shadow-lg transition-shadow">
                <div className="space-y-3">
                  <div className="flex items-start justify-between">
                    <div className="flex-1">
                      <div className="font-semibold text-lg text-gray-900">{plan.name || 'Workout Cycle'}</div>
                      <div className="text-sm text-gray-500 mt-1">
                        {new Date(plan.startDate).toLocaleDateString('en-US', { month: 'short', day: 'numeric' })} - {plan.durationWeeks}w
                      </div>
                    </div>
                    <Button 
                      variant="danger" 
                      size="sm" 
                      onClick={()=>removePlan(plan._id)}
                      className="flex-shrink-0"
                    >
                      Delete
                    </Button>
                  </div>
                  <div className="pt-3 border-t">
                    <div className="flex items-center justify-between text-sm">
                      <span className="text-gray-600">Training Days</span>
                      <span className="font-bold text-green-600">{plan.days?.length||0}</span>
                    </div>
                  </div>
                </div>
              </Card>
            ))}
          </div>
        </>
      )}

      {!loading && plans.length === 0 && (
        <Card className="p-12 text-center">
          <div className="text-gray-400 mb-4">
            <svg className="w-16 h-16 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
            </svg>
          </div>
          <h3 className="text-lg font-semibold text-gray-900 mb-2">No Workout Plans Yet</h3>
          <p className="text-gray-600">Generate your first AI-powered workout cycle to get started!</p>
        </Card>
      )}

      {latest && (
        <div className="space-y-6">
          <div className="flex items-center justify-between">
            <h2 className="text-2xl font-bold text-gray-900">{latest.name || 'Workout Cycle'}</h2>
            <span className="text-sm text-gray-500">{days.length} days</span>
          </div>

          <Card className="p-6">
            <h3 className="font-semibold text-lg mb-4">Select Day</h3>
            <div className="flex space-x-3 overflow-x-auto pb-2">
              {days.map((d:any, idx:number)=> (
                <button 
                  key={idx} 
                  onClick={()=>setSelectedIndex(idx)} 
                  className={`px-6 py-3 rounded-lg flex-shrink-0 font-medium transition-all ${
                    selectedIndex===idx
                      ? 'bg-green-500 text-white shadow-lg scale-105' 
                      : 'bg-gray-100 text-gray-700 hover:bg-gray-200'
                  }`}
                >
                  {d.day || `Day ${idx+1}`}
                </button>
              ))}
            </div>
          </Card>

          <div>
            <h3 className="font-semibold text-lg mb-4">
              {days[selectedIndex]?.day || `Day ${selectedIndex+1}`} Workout
            </h3>
            {days[selectedIndex]?.exercises?.length > 0 ? (
              <div className="space-y-4">
                {days[selectedIndex].exercises.map((ex:any, i:number)=> (
                  <ExerciseCard key={i} name={ex.name} sets={ex.sets} reps={ex.reps} rest={ex.rest} />
                ))}
              </div>
            ) : days[selectedIndex]?.isRestDay ? (
              <Card className="p-12 text-center">
                <div className="text-gray-400 mb-4">
                  <svg className="w-16 h-16 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z" />
                  </svg>
                </div>
                <h3 className="text-lg font-semibold text-gray-900 mb-2">Rest Day</h3>
                <p className="text-gray-600">Recovery is just as important as training!</p>
              </Card>
            ) : (
              <Card className="p-12 text-center">
                <p className="text-gray-500">No exercises for this day</p>
              </Card>
            )}
          </div>
        </div>
      )}
    </div>
  );
}
